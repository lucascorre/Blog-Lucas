{% extends 'base.html.twig' %}

{% block title %}Newsletter{% endblock %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}

	<a href="/">
		<buttontype="button" class="btn btn-success">Retour Page Accueil</button>
	</a>

	<div class="card text-white bg-dark mb-3 mx-auto mt-5" style="width: 450px">
		<div class="card-header mx-auto">
			<h4>S'abonner a notre Newsletter</h4>
		</div>
		{{ form_start(form) }}

		<div class="card-body">
			<div id="newsletterForm">
				{{ form_start(form) }}
				<div class="row">
					<div class="col">{{ form_label(form.email) }}</div>
				</div>
				<div class="row">
					<div class="col">{{ form_widget(form.email) }}</div>
				</div>
				<div class="form-group mt-4 text-center">
					<button class="btn btn-success">Souscrire</button>
				</div>
				{{ form_end(form) }} 
			</div>
		</div>

	{% endblock %}
