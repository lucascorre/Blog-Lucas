{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}

	<section>
		<div class="container">
			<div class="row">
				{% for article in articles %}
					<div class="container">
						<div class="row">
							<div class="col-8">
								<div class="card">
									<img src="https://air-soft.gun-evasion.com/upload/image/beretta-m9-a3-airsoft-co2-blowback-desert-1-3-j-p-image-44885-grande.jpg" class="card-img-top" alt="...">
									<div class="card-body">
										<h5 class="card-title">{{article.title}}</h5>
										<p class="card-text">{{article.content}}</p>
										<p>{{article.author}} -	{{article.createdAt |date("d/m/Y")}}</p>
										<a href="#" class="btn btn-primary">Go somewhere</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>

{% endblock %}
