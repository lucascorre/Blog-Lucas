{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}

	<section>
		<div class="container">
			<div class="row">
				{% for article in articles %}
					<div>
						<div class="card">
							<img src="..." class="card-img-top" alt="...">
							<div class="card-body">
								<h5 class="card-title">{{article.title}}</h5>
								<p class="card-text">{{article.content}}</p>
                                <p>{{article.author}} - {{article.createdAt |date("d/m/Y")}}</p>
								<a href="#" class="btn btn-primary">Go somewhere</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>

{% endblock %}
