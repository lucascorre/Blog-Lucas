{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
	<div class="row mt-5 ml-5">
		<a href="/">
			<buttontype="button" class="btn btn-success">Retour Page Accueil</button>
		</a>
	</div>

	<div class="card text-white bg-dark mb-3 mx-auto mt-5" style="width: 450px">
		<div class="card-header">
			<h4>Contact</h4>
		</div>
		{{ form_start(form) }}

		<div class="card-body">
			<div id="contactForm">
				{{ form_start(form) }}
				<div class="row">
					<div class="col">{{ form_row(form.firstname) }}</div>
					<div class="col">{{ form_row(form.lastname) }}</div>
				</div>
				<div class="row mt-4">
					<div class="col">{{ form_label(form.phone) }}</div>
					<div class="col">{{ form_label(form.email) }}</div>
				</div>
				<div class="row">
					<div class="col">{{ form_widget(form.phone) }}</div>
					<div class="col">{{ form_widget(form.email) }}</div>
				</div>
				<div class="row mt-4">
					{{ form_label(form.message) }}
				</div>
				<div class="row">
					{{ form_widget(form.message) }}
				</div>
				<div class="form-group mt-4 text-center">
					<button class="btn btn-success">Envoyer</button>
				</div>
				{{ form_end(form) }}
			</div>
		</div>

	{% endblock %}
